<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <!-- I want the xUnit.net executables to run on CLR 4 even when I have both CLR 2.0 and CLR 4 installed -->
  <!--
  <startup>
    <supportedRuntime version="v4.0.20506" /> 
  </startup>
  -->
  
  <configSections>
    <section name="xunit" type="Xunit.ConsoleClient.XunitConsoleConfigurationSection, xunit.console"/>
  </configSections>

  <xunit>
    <transforms>
      <add
        commandline="html"
        xslfile="HTML.xslt"
        description="output results to HTML file"/>
      <add
        commandline="nunit"
        xslfile="NUnitXml.xslt"
        description="output results to NUnit-style XML file"/>
    </transforms>
  </xunit>
  
</configuration>